{
    "name": "Cookie Preserver",
    "version": "0.1",
    "description": "Easily isolote cookies on a single tab.",
    "manifest_version":2,
    "background": {
      "scripts":["js/cookie-manager.js","js/watch-tab.js"]
    },
    "permissions": [
        "webRequestBlocking",
        "webRequest",
        "tabs",
        "cookies",
        "http://*/*"
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Isolate this tab"
    }
}
